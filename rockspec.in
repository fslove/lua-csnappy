package = 'lua-csnappy'
version = '@version@-@rev@'
source = {
    url = 'http://github.com/downloads/fperrad/lua-csnappy/lua-csnappy-@version@.tar.gz',
    md5 = '@md5@',
    dir = 'lua-csnappy-@version@',
}
description = {
    summary = "a fast compressor/decompressor",
    detailed = [[
        lua-csnappy is a binding of the csnappy library which implements the Google's Snappy (de)compressor.
    ]],
    homepage = 'http://fperrad.github.com/lua-csnappy/',
    maintainer = 'Francois Perrad',
    license = 'BSD'
}
dependencies = {
    'lua >= 5.1',
}
build = {
    type = "builtin",
    modules = {
        snappy = {
            sources = "lsnappy.c",
        },
    },
    copy_directories = { 'doc', 'test' },
}
